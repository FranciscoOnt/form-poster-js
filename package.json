{
  "name": "@bigcommerce/form-poster",
  "version": "1.1.2",
  "description": "A JavaScript library for posting HTML form data",
  "license": "MIT",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:bigcommerce/form-poster-js.git"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:bundle",
    "prebuild:bundle": "rm -rf dist",
    "build:bundle": "webpack -p",
    "prebuild:lib": "rm -rf lib",
    "build:lib": "tsc --outDir lib --project tsconfig-build.json",
    "lint": "npm run lint:js && npm run lint:ts",
    "lint:js": "eslint src test",
    "lint:ts": "tslint 'src/**/*.ts' --config tslint.json --project tsconfig.json && tsc --noEmit",
    "prepare": "npm run build",
    "prerelease": "npm run lint && npm test",
    "release": "standard-version --tag-prefix ''",
    "postrelease": "npm publish --access public && git push --follow-tags",
    "test": "jest --config jest-config.js"
  },
  "devDependencies": {
    "@bigcommerce/tslint-config": "^2.0.1",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^22.4.3",
    "standard-version": "^4.0.0",
    "ts-jest": "^21.2.3",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1",
    "typescript-eslint-parser": "^9.0.1",
    "webpack": "^3.12.0"
  }
}
