{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "es5"
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "test/**/*.js",
        "test/**/*.ts"
    ]
}
